{% extends 'base.html.twig' %}

{% block title %}Hello ConnectionController!{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <h2 class="text-center" style="font-weight: 700">Connexion</h2>
    {{ form_start(form) }}
        <div class="form-group my-2">
            {{form_label(form.email, "Email :")}}
            {{form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Saisissez votre email'}})}}
            {{form_errors(form.email)}}
        </div>
        <div class="form-group my-2">
            {{form_label(form.password, "Password :")}}
            {{form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': "*********"}})}}
            {{form_errors(form.password)}}
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div>
            <input class="btn btn-success w-100 my-3" type="submit" value="Connexion">
        </div>
    {{ form_end(form) }}
    {% if errorConnexion is defined %}
        <p style="color: red;">Utilisateur introuvable</p >
    {% endif %}
</div>
{% endblock %}