{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<div class="container">
    <div class="container">
      <h1 style="text-decoration: underline; text-decoration-color: #339af0;">Classement des meilleurs grimpeurs</h1><hr>
      <table class="table table-dark">
        <thead>
          <tr>
            <th>#</th>
            <th>Nom</th>
            <th>Pr√©nom</th>
            <th>Score</th>
            <th>Rank</th>
          </tr>
        </thead>
        <tbody>
          {% for index,user in users %}
           <tr>
           {% if index + 1 == 1 %}
           <td style="background-color: #f1c40f;">{{index + 1}}</td>
           {% endif %}

           {% if index + 1 == 2 %}
           <td style="background-color: #bdc3c7;">{{index + 1}}</td>
           {% endif %}
           
           {% if index + 1 == 3 %}
           <td style="background-color: #CD7F32;">{{index + 1}}</td>
           {% endif %}

           {% if index + 1 > 3  %}
           <td>{{index + 1}}</td>
           {% endif %}
              <td>{{user.nom}}</td>
              <td>{{user.prenom}}</td>
              <td>{{user.score}}</td>
              <td><p class="badge" style="background-color: #CD7F32">{{user.ladder}}</p></td>
          </tr>
          {% endfor %}
          
        </tbody>
      </table>
    </div>
</div>
{% endblock %}
