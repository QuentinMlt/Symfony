{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
<div class="row justify-content-center align-items-center rounded bg-dark text-light py-5">
    <div class="col-6 text-center">
    {% if user.ladder is same as("Bronze") %}
        <img src="{{asset('img/bronze.png')}}" alt={{user.ladder}} style="width: 150px;">
    {% endif %}
    {% if user.ladder is same as("Argent") %}
        <img src="{{asset('img/argent.png')}}" alt={{user.ladder}} style="width: 150px;">
    {% endif %}
    {% if user.ladder is same as("Or") %}
        <img src="{{asset('img/or.png')}}" alt={{user.ladder}} style="width: 150px;">
    {% endif %}
        <p class="my-3"><span style="font-weight: 700">Email : </span>{{user.email}}</p>
        <p class="my-3"><span style="font-weight: 700">Rang : </span>{{user.ladder}}</p>
        <p class="my-3"><span style="font-weight: 700">Score : </span>{{user.score}} points</p>
    </div>
    {% if userAuth and boolAuth and userAuth.id is same as(user.id) %}
    <div class="col-6 pe-5">
        {{ form_start(form) }}
            <div class="form-group my-2">
                {{form_label(form.nom, "Nom :")}}
                {{form_widget(form.nom, {'attr': {'class': 'form-control bg-dark text-light', 'placeholder': 'Saisissez votre nom', "value": user.nom}})}}
                {{form_errors(form.nom)}}
            </div>
            <div class="form-group my-2">
                {{form_label(form.prenom, "Prénom :")}}
                {{form_widget(form.prenom, {'attr': {'class': 'form-control bg-dark text-light', 'placeholder': 'Saisissez votre prenom', "value": user.prenom}})}}
                {{form_errors(form.prenom)}}
            </div>
            <div class="form-group my-2">
                {{form_label(form.password, "Password :")}}
                {{form_widget(form.password, {'attr': {'class': 'form-control bg-dark text-light', 'placeholder': "*********", 'required': false}})}}
                {{form_errors(form.password)}}
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="text-light">
                <input class="btn btn-primary w-100 my-3" type="submit" value="Sauvegarder">
            </div>
        {{ form_end(form) }}
    </div>
    <div class="col-12">
    <h2>Valider la participation des membres suivant :</h2>
    
    </div>
    {% else %}
    <div class="col-6 pe-5">
        <div class="form-group my-2">
            <p><span style="font-weight: 700">Nom : </span>{{user.nom}}</p>
        </div>
        <div class="form-group my-2">
            <p><span style="font-weight: 700">Prénom : </span>{{user.prenom}}</p>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
